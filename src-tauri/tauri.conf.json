{
  "productName": "NTP Client",
  "version": "1.0.0-beta.1",
  "identifier": "com.exptech.ntp-client",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../out"
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": ["nsis", "app", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13",
      "entitlements": "./Entitlements.plist"
    },
    "linux": { "appimage": { "bundleMediaFramework": true } },
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser"
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "NTP Client",
        "width": 840,
        "height": 630,
        "minWidth": 320,
        "minHeight": 160,
        "maxWidth": 840,
        "maxHeight": 630,
        "resizable": true,
        "maximizable": false,
        "devtools": true,
        "visible": false
      }
    ],
    "security": {
      "csp": {
        "default-src": ["'self'", "ipc:", "http://ipc.localhost"],
        "img-src": ["'self'", "asset:", "http://asset.localhost", "data:"],
        "script-src": ["'self'", "'unsafe-inline'", "'unsafe-eval'"],
        "style-src": ["'self'", "'unsafe-inline'"]
      },
      "capabilities": [
        {
          "identifier": "main",
          "windows": ["*"],
          "permissions": [
            "core:default",
            "core:window:allow-show",
            "core:window:allow-hide",
            "core:window:allow-close",
            "core:window:allow-set-focus",
            "core:tray:default",
            "shell:allow-open",
            "updater:default"
          ]
        }
      ]
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDRDMUM5MDdDODQ3QkY0RjMKUldUejlIdUVmSkFjVENlcXY0QTBuMFF2RC9EVkpNRWhubnUraGdVZDJNVXBiVUhDZFcyYU1wZTEK",
      "endpoints": [
        "https://github.com/ExpTechTW/ntp-client/releases/latest/download/latest.json"
      ],
      "windows": { "installMode": "passive" }
    }
  }
}
